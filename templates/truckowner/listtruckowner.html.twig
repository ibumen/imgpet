{# empty Twig template #}
{% extends "base.html.twig" %}
{% block content %}
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header d-flex align-content-center">
                    <h3 class="h4">List of Truck Owners</h3>
                </div>
                <div class="card-body">
                    <div class='listdiv'>
                        <table class="table table-striped table-sm table-bordered table-hover">
                            <thead class="thead-dark">
                                <tr>
                                    <th>#</th><th>Title</th><th>Full Name</th><th>No of Trucks</th><th>Actions</th>                                
                                </tr>
                            </thead>
                            <tbody>
                                {% for truckowner in truckowners %}
                                    <tr>
                                        <td>{{loop.index}}</td>
                                        <td>{{truckowner.title}}</td>
                                        <td>{{truckowner.fname~" "~truckowner.oname~" "~truckowner.lname}}</td>
                                        <td> {% if truckowner.trucks|length >0 %}<a href="{{path('listtruckbyowner', {'owner':truckowner.id})}}">{{truckowner.trucks|length}}</a> {% else %} - {% endif %}</td>
                                        <td><a href="{{path('addtrucktoowner', {"owner":truckowner.id})}}" class="btn btn-default btn-sm">Add Truck</a> <button {{truckowner.trucks|length >0?"":"hidden"}} data-id='{{truckowner.id}}' class="btn btn-danger btn-sm">Delete</button></td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock content %}