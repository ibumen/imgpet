{# empty Twig template #}
{% extends "base.html.twig" %}
{% block content %}
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header d-flex align-content-center">
                    <h3 class="h4">List of Truck 
                        {% if owner is defined and owner is not null %}
                            Owned by {{owner.getFullName()}}
                        {% endif %}
                    </h3>
                </div>
                <div class="card-body">{% if owner is defined and owner is not null %}
                    [<a href = "{{path('listtruck')}}" >All Trucks</a>] [<a href = "{{path('listtruckowner')}}">All Trucks Owners</a>] <br /><br />
                    {% endif %}
                        <div class='listdiv'>
                            <table class="table table-striped table-sm table-bordered table-hover">
                                <thead class="thead-dark">
                                    <tr>
                                        <th>#</th><th>Truck Number</th><th>Owner</th><th>Status</th><th>Actions</th>                                
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for truck in trucks %}
                                        <tr>
                                            <td>{{loop.index}}</td>
                                            <td>{{truck.truckNumber}}</td>
                                            <td><a href="{{path('listtruckbyowner', {'owner': truck.getTruckOwner.id})}}" >{{truck.getTruckOwner().getFullName()}}</a></td>
                                            <td>{{truck.truckStatus}}</td>
                                            <td><button data-id='{{truck.id}}' class="btn btn-primary btn-sm">{{truck.truckStatus=="active"?"Deactivate":"Activate"}}</button> <button data-id='{{truck.id}}' class="btn btn-danger btn-sm">Delete</button></td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        {% endblock content %}