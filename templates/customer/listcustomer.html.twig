{# empty Twig template #}
{% extends "base.html.twig" %}
{% block content %}
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header d-flex align-content-center">
                    <h3 class="h4">List of Customer/Agent</h3>
                </div>
                <div class="card-body">
                    <div class='listdiv'>                    
                        <table class="table table-striped table-sm table-bordered table-hover">
                            <thead class="thead-dark">
                                <tr>
                                    <th>#</th><th>Customer ID</th><th>Customer Name</th><th>Status</th><th>Actions</th>                                
                                </tr>
                            </thead>
                            <tbody>
                                {% for customer in customers %}

                                    {% if loop.index!=1 %}                                
                                        <tr>
                                            <td>{{loop.index -1}}</td>
                                            <td class='toverflow'><a href="{{path("viewcustomer",{"customerid":customer.id})}}">{{customer.cid}}</a></td>
                                            <td>{{customer.title}} {{customer.getFullName()}}</td>
                                            <td>{{customer.status}}</a></td>
                                            <td><a href="{{path('editcustomer',{'customerid':customer.id})}}" class="btn no-padding-top no-padding-bottom"><i class="icon ion-android-create"> </i></a> <a href="#" data-id='{{customer.id}}' style="color: red;" class="btn no-padding-top no-padding-bottom"><i class="icon ion-trash-b"> </i> </a></td>
                                        </tr>
                                    {% endif %}
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock content %}