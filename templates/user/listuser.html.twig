{# empty Twig template #}
{% extends "base.html.twig" %}
{% block content %}
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header d-flex align-content-center">
                    <h3 class="h4">List of Users</h3>
                </div>
                <div class="card-body">
                    <div class='listdiv'>
                        <table class="table table-striped table-sm table-bordered table-hover">
                            <thead class="thead-dark">
                                <tr>
                                    <th>#</th><th>Title</th><th>Full Name</th><th>Username</th><th>Date Registered</th><th>Last Login</th><th>Status</th><th>Actions</th>                                
                                </tr>
                            </thead>
                            <tbody>
                                {% for user in users %}
                                    <tr>
                                        <td>{{loop.index}}</td>
                                        <td>{{user.title}}</td>
                                        <td>{{user.fname~" "~user.oname~" "~user.lname}}</td>
                                        <td>{{user.username}}</td>
                                        <td>{{user.dateCreated|date('d/m/Y')}}</td>
                                        <td>{{user.lastLogin|date('d/m/Y H:i:s')}}</td>
                                        <td>{{user.status|capitalize}}</td>
                                        <td><button data-id='{{user.id}}' class="btn btn-primary btn-sm">{{user.status=="disabled"?"Enable":"Disable"}}</button> <button data-id="{{user.id}}" class="btn btn-primary btn-sm pwd-reset">Reset Password</button></td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock content %}